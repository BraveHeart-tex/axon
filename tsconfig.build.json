{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "incremental": false, // Clean builds for production
    "removeComments": true,
    "sourceMap": false, // No source maps in production
    "declaration": false, // Only if not building a library
    "noEmitOnError": true // Strict error checking for builds
  },
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts", "**/*.dev.ts"]
}
